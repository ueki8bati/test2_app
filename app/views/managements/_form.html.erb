<%= form_with(model: management, local: true, html: {class: 'form-horizontal', role: 'form'}) do |form| %>
  <% if management.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(management.errors.count, "error") %> prohibited this management from being saved:</h2>

      <ul>
      <% management.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :user_id, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= form.number_field :user_id %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :category_id, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= form.select :category_id, Category.all.map{|o| [o.name, o.id]} %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :menu, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= form.text_field :menu %>
    </div>
  </div>

  <div class="actions">
    <div class='form-group'>
      <div class='col-sm-offset-2 col-sm-10'>
        <%= form.submit 'Update', class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>
