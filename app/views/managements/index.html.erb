<p id="notice"><%= notice %></p>

<h1>Managements</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>User</th>
      <th>Category</th>
      <th>Menu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @managements.each do |management| %>
      <tr>
        <td><%= management.user.email %></td>
        <td><%= management.category.name %></td>
        <td><%= management.menu %></td>
        <td><%= link_to 'Show', management %></td>
        <td><%= link_to 'Edit', edit_management_path(management) %></td>
        <td><%= link_to 'Destroy', management, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Management', new_management_path, class: 'btn btn-primary' %>
